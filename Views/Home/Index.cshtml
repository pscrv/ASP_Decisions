@model  IEnumerable<ASP_Decisions.Models.Decision>


<h3> The latest decisions </h3>

<div class="col-sm-9">

    @foreach (var dec in Model)
    {        
        @Html.Partial("_DecisionSimple", dec)
    }
</div>


<div class="col-sm-3">
    <div class="row pull-right">
        <form class="form-inline">
            <div class="form-group">
                <label class="sr-only" for="caseNumber">Case Number</label>
                <input type="text" class="form-control" id="caseNumber" name="caseNumber" placeholder="Case Number">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>
