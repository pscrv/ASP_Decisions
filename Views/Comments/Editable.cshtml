@model ASP_Decisions.Models.ViewModels.AddCommentViewModel



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal">
            <h4>Comment</h4><div>
                <p> Author:    @Model.Author </p>
                <p> Decision:  @Model.CaseNumber </p>
            </div>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Author)
            @Html.HiddenFor(model => model.CaseNumber)
            @Html.HiddenFor(model => model.DateSubmitted)

            <div class="form-group">
                @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control long-text" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-1">
                    <input type="submit" class="btn btn-success" value="Save" name="SubmitButton" />
                </div>
                <div class="col-md-offset-2 col-md-1">
                    <input type="submit" class="btn btn-default" value="Cancel" name="SubmitButton" />
                </div>
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

